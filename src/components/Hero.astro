---
import { siteConfig } from "../config";
---

<div
  id="hero"
  class="relative isolate overflow-hidden bg-white py-24 md:h-screen"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Animated radial gradient background -->
  <div
    class="absolute inset-0 -z-10 animate-gradient-slow"
    style={`background: radial-gradient(circle at 30% 30%, ${siteConfig.accentColor}20, ${siteConfig.accentColor}05 60%, white 100%)`}
  ></div>

  <!-- Floating programming symbols -->
  <svg
    aria-hidden="true"
    class="absolute inset-0 -z-10 w-full h-full"
  >
    <defs>
      <pattern
        id="programming-symbols"
        x="0"
        y="0"
        width="400"
        height="400"
        patternUnits="userSpaceOnUse"
      >
        {["</>", "{}", "=>", "[]", "<>", "()", "::", "==", "++", ";"].map(
          (symbol, i) => (
            <text
              key={i}
              x={Math.random() * 400}
              y={Math.random() * 400}
              fill={siteConfig.accentColor}
              fontFamily="monospace"
              fontSize={16 + Math.floor(Math.random() * 12)}
              transform={`rotate(${Math.floor(Math.random() * 30) - 15})`}
            >
              {symbol}
            </text>
          )
        )}
      </pattern>
    </defs>
    <rect fill="url(#programming-symbols)" width="100%" height="100%" opacity="0.15"></rect>
  </svg>

  <div class="h-full mx-auto p-8 sm:p-12 md:p-24 flex flex-col justify-center">
    <div>
      <h2
        class="text-xl sm:text-2xl md:text-5xl font-bold tracking-tight text-gray-700 animate-fade-in"
        style="animation-delay: 0s"
      >
        Hello! ðŸ‘‹
      </h2>
      <h1
        class="mt-6 sm:mt-8 md:mt-10 text-4xl sm:text-5xl md:text-6xl lg:text-8xl font-bold tracking-tight text-gray-800 animate-fade-in"
        style={`color: ${siteConfig.accentColor}; animation-delay: 0.2s`}
      >
        I'm {siteConfig.name}
      </h1>
      <p
        class="mt-4 sm:mt-6 md:mt-8 text-base sm:text-lg md:text-xl font-medium text-gray-600 animate-fade-in"
        style={`animation-delay: 0.4s`}
      >
        {siteConfig.title}
      </p>
    </div>

    <!-- Social icons -->
    <div
      class="mt-8 flex gap-4 sm:gap-6 md:gap-8 text-gray-700 animate-fade-in"
      style={`animation-delay: 0.6s`}
    >
      {siteConfig.social?.email && (
        <a
          href={`mailto:${siteConfig.social.email}`}
          aria-label="Email"
          class="transition-transform transform hover:-translate-y-1 hover:text-[var(--accent-color)]"
        >
          {/* Add your email SVG here */}
        </a>
      )}
      {siteConfig.social?.linkedin && (
        <a
          href={siteConfig.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          class="transition-transform transform hover:-translate-y-1 hover:text-[var(--accent-color)]"
        >
          {/* Add LinkedIn SVG */}
        </a>
      )}
      {siteConfig.social?.github && (
        <a
          href={siteConfig.social.github}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          class="transition-transform transform hover:-translate-y-1 hover:text-[var(--accent-color)]"
        >
          {/* Add GitHub SVG */}
        </a>
      )}
      {siteConfig.social?.twitter && (
        <a
          href={siteConfig.social.twitter}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Twitter"
          class="transition-transform transform hover:-translate-y-1 hover:text-[var(--accent-color)]"
        >
          {/* Add Twitter SVG */}
        </a>
      )}
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
  }

  @keyframes gradientMove {
    0%, 100% { background-position: 0% 0%; }
    50% { background-position: 100% 100%; }
  }

  .animate-gradient-slow {
    animation: gradientMove 20s ease infinite;
  }
</style>
