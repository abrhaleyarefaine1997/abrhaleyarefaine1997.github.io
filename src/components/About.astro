---
import { siteConfig } from "../config";
---

<section 
  id="about" 
  class="relative py-20 px-6 sm:px-12 md:px-16 lg:px-24 bg-gradient-to-br from-white to-gray-50"
>
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-center">
      
      <!-- Left side: Title -->
      <div class="lg:col-span-4" data-aos="fade-right">
        <h2 class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-gray-900">
          About Me
        </h2>
        <div
          class="w-20 h-1 mt-4 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        ></div>
      </div>

      <!-- Right side: Content -->
      <div class="lg:col-span-8 space-y-8" data-aos="fade-left">
        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-700">
          {siteConfig.aboutMe}
        </p>

        <!-- Skills -->
        <div class="pt-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Skills & Tools</h3>
          <div class="flex flex-wrap gap-3">
            {
              siteConfig.skills.map((skill) => (
                <span 
                  class="px-4 py-2 bg-gray-100 text-gray-800 rounded-full text-sm sm:text-base font-medium 
                         hover:bg-blue-600 hover:text-white transition-all duration-300 shadow-sm hover:shadow-md"
                >
                  {skill}
                </span>
              ))
            }
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
