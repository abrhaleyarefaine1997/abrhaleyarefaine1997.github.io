---
import { siteConfig } from "../config";
---

<section 
  id="about" 
  class="relative py-20 px-6 sm:px-12 md:px-16 lg:px-24 bg-gradient-to-br from-white to-gray-50 dark:from-slate-900 dark:to-slate-800"
>
  <div class="max-w-7xl mx-auto relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-center">
      
      <!-- Left side: Title -->
      <div class="lg:col-span-4" data-aos="fade-right">
        <h2 class="section-title text-4xl sm:text-5xl md:text-6xl font-extrabold text-gray-900 dark:text-white">
          About Me
        </h2>
      </div>

      <!-- Right side: Content -->
      <div class="lg:col-span-8 space-y-6" data-aos="fade-left">
        <!-- About Me -->
        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-700 dark:text-gray-300 animate-fade-in">
          {siteConfig.aboutMe}
        </p>

        <!-- Description -->
        <p class="text-md sm:text-lg md:text-xl text-gray-600 dark:text-gray-400 animate-fade-in" style="animation-delay: 0.2s">
          {siteConfig.description}
        </p>

        <!-- Skills -->
        <div class="pt-6">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-4">Skills & Tools</h3>
          <div class="flex flex-wrap gap-3">
            {siteConfig.skills.map(skill => (
              <span 
                class="px-4 py-2 bg-gray-100 dark:bg-slate-700 text-gray-800 dark:text-gray-200 rounded-full 
                       text-sm sm:text-base font-medium 
                       hover:bg-gradient-to-r hover:from-blue-600 hover:to-purple-600 hover:text-white 
                       transition-all duration-300 shadow-sm hover:shadow-lg animate-fade-in"
              >
                {skill}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Background Decoration -->
  <div class="absolute inset-0 overflow-hidden opacity-10 pointer-events-none">
    <div class="absolute top-20 left-10 w-72 h-72 bg-blue-400 rounded-full mix-blend-multiply filter blur-3xl animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-72 h-72 bg-purple-400 rounded-full mix-blend-multiply filter blur-3xl animate-pulse delay-2000"></div>
  </div>
</section>
