---
import { siteConfig } from "../config";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

<footer class="relative bg-gradient-to-b from-gray-50 to-gray-100 dark:from-slate-900 dark:to-slate-950 border-t border-gray-200 dark:border-slate-800">
  <div class="mx-auto max-w-7xl px-6 py-16 lg:px-12 relative z-10">
    <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-12">

      <!-- Left Section -->
      <div class="flex flex-col gap-4" data-aos="fade-right">
        <h3 class="text-3xl font-extrabold text-gray-900 dark:text-white">
          {siteConfig.name}
        </h3>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          {siteConfig.title}
        </p>

        <!-- Social Links -->
        <div class="flex gap-x-6 mt-4">
          {[
            { href: `mailto:${siteConfig.social.email}`, label: "Email", icon: "M3 7a2 2..." },
          ].map((social, index) => (
            <a
              href={social.href}
              aria-label={social.label}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 dark:text-gray-400 hover:text-[var(--accent-color)] transition-all duration-300 transform hover:scale-110"
              style={`--accent-color: ${siteConfig.accentColor}`}
              data-aos="zoom-in"
              data-aos-delay={index * 100}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-7 w-7">
                <path d="M3 7a2 2..." />
              </svg>
            </a>
          ))}

          <!-- GitHub example -->
          <a
            href={siteConfig.social.github}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
            class="text-gray-600 dark:text-gray-400 hover:text-[var(--accent-color)] transition-all duration-300 transform hover:scale-110"
            style={`--accent-color: ${siteConfig.accentColor}`}
            data-aos="zoom-in"
            data-aos-delay="300"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 19c-4.3 1.4..." />
            </svg>
          </a>
        </div>
      </div>

      <!-- Right Section -->
      <div class="flex flex-col md:items-end gap-6" data-aos="fade-left">
        <nav class="flex gap-x-8 text-gray-600 dark:text-gray-400">
          <a href="#about" class="hover:text-[var(--accent-color)] transition-colors" style={`--accent-color: ${siteConfig.accentColor}`}>About</a>
          {hasProjects && <a href="#projects" class="hover:text-[var(--accent-color)] transition-colors" style={`--accent-color: ${siteConfig.accentColor}`}>Projects</a>}
          {hasExperience && <a href="#experience" class="hover:text-[var(--accent-color)] transition-colors" style={`--accent-color: ${siteConfig.accentColor}`}>Experience</a>}
          {hasEducation && <a href="#education" class="hover:text-[var(--accent-color)] transition-colors" style={`--accent-color: ${siteConfig.accentColor}`}>Education</a>}
        </nav>
        <p class="text-sm text-gray-500 dark:text-gray-400">
          Â© {new Date().getFullYear()} {siteConfig.name}. All rights reserved.
        </p>
      </div>
    </div>
  </div>

  <!-- Decorative Background -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div class="absolute -top-10 left-10 w-72 h-72 bg-blue-400 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-80 h-80 bg-purple-400 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse delay-1000"></div>
  </div>
</footer>
