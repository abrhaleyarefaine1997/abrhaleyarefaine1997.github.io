---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{
  hasEducation && (
    <section 
      id="education" 
      class="relative py-20 px-6 sm:px-12 md:px-16 lg:px-24 bg-gradient-to-br from-white to-gray-50 dark:from-slate-900 dark:to-slate-800"
    >
      <div class="max-w-7xl mx-auto relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-start">
          
          <!-- Left side: Title -->
          <div class="lg:col-span-4" data-aos="fade-right">
            <h2 class="section-title text-4xl sm:text-5xl md:text-6xl font-extrabold text-gray-900 dark:text-white">
              Education
            </h2>
          </div>

          <!-- Right side: Education Cards -->
          <div class="lg:col-span-8 space-y-8">
            {siteConfig.education.map((edu, index) => (
              <div 
                class="bg-white dark:bg-slate-800 rounded-xl shadow-md border border-gray-200 dark:border-slate-700 
                       p-6 transition-all duration-300 hover:shadow-xl hover:-translate-y-1 relative overflow-hidden"
                data-aos="fade-up"
                data-aos-delay={index * 100}
              >
                <!-- Accent bar -->
                <div 
                  class="absolute top-0 left-0 h-1 w-full"
                  style={`background-color: ${siteConfig.accentColor}`}
                ></div>

                <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                  <div>
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                      {edu.degree}
                    </h3>
                    <p 
                      class="text-base sm:text-lg font-medium"
                      style={`color: ${siteConfig.accentColor}`}
                    >
                      {edu.school}
                    </p>
                  </div>
                  <span class="text-sm text-gray-500 dark:text-gray-400 mt-2 sm:mt-0">
                    {edu.dateRange}
                  </span>
                </div>

                <!-- Achievements -->
                <ul class="space-y-2 mt-2">
                  {edu.achievements.map((achievement) => (
                    <li class="flex items-start">
                      <span class="inline-block w-2 h-2 rounded-full bg-blue-500 dark:bg-blue-400 mt-2 mr-3 flex-shrink-0" />
                      <span class="text-sm sm:text-base text-gray-700 dark:text-gray-300">
                        {achievement}
                      </span>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Background Decoration -->
      <div class="absolute inset-0 overflow-hidden opacity-10 pointer-events-none">
        <div class="absolute top-24 left-20 w-72 h-72 bg-blue-400 rounded-full mix-blend-multiply filter blur-3xl animate-pulse"></div>
        <div class="absolute bottom-24 right-20 w-80 h-80 bg-purple-400 rounded-full mix-blend-multiply filter blur-3xl animate-pulse delay-2000"></div>
      </div>
    </section>
  )
}
