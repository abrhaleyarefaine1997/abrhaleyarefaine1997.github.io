---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{hasEducation && (
  <section
    id="education"
    class="relative py-20 px-6 sm:px-12 md:px-16 lg:px-24 bg-gradient-to-br from-white to-gray-50"
  >
    <div class="max-w-7xl mx-auto relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-start">

        <!-- Left: Section Title -->
        <div class="lg:col-span-4" data-aos="fade-right">
          <h2 class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-gray-900">
            Education
          </h2>
          <div
            class="w-20 h-1 mt-4 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          ></div>
        </div>

        <!-- Right: Education Cards -->
        <div class="lg:col-span-8 relative space-y-8" data-aos="fade-left">
          {siteConfig.education.map((edu, index) => (
            <div
              class="bg-white rounded-xl shadow-lg border border-gray-200 p-6 sm:p-8 md:p-10 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 relative overflow-hidden group"
              data-aos="fade-up"
              data-aos-delay={index * 150}
            >
              {/* Accent bar */}
              <div
                class="absolute top-0 left-0 h-1 w-full"
                style={`background-color: ${siteConfig.accentColor}`}
              ></div>

              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                <div>
                  <h3 class="text-xl sm:text-2xl font-bold text-gray-900">
                    {edu.degree}
                  </h3>
                  <p
                    class="text-base sm:text-lg font-medium"
                    style={`color: ${siteConfig.accentColor}`}
                  >
                    {edu.school}
                  </p>
                </div>
                <span class="text-sm sm:text-base text-gray-500 mt-2 sm:mt-0">
                  {edu.dateRange}
                </span>
              </div>

              {/* Achievements */}
              <ul class="space-y-3 mt-2">
                {edu.achievements.map((achievement) => (
                  <li class="flex items-start">
                    <span class="inline-block w-2.5 h-2.5 rounded-full bg-blue-500 mt-2 mr-3 flex-shrink-0 animate-pulse"></span>
                    <span class="text-sm sm:text-base text-gray-700">{achievement}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>

      </div>
    </div>

    {/* Background Decorations */}
    <div class="absolute inset-0 overflow-hidden opacity-10 pointer-events-none">
      <div class="absolute top-24 left-16 w-72 h-72 bg-blue-400 rounded-full mix-blend-multiply filter blur-3xl animate-pulse"></div>
      <div class="absolute bottom-24 right-16 w-80 h-80 bg-purple-400 rounded-full mix-blend-multiply filter blur-3xl animate-pulse delay-2000"></div>
    </div>
  </section>
)}
